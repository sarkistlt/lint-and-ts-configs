{
  "compileOnSave": false,
  "compilerOptions": {
    "noEmitOnError": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowJs": true,
    "checkJs": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "es2018",
    "sourceMap": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "noImplicitAny": false,
    "strictNullChecks": true
  }
}
