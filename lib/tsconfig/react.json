{
  "compileOnSave": false,
  "compilerOptions": {
    "noEmitOnError": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "checkJs": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "lib": ["dom","es6", "es2016", "es2017", "es2018"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "target": "esnext",
    "sourceMap": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "noImplicitAny": false,
    "strictNullChecks": true
  }
}
